<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aandroid="http://schemas.android.com/tools"
    android:background="@color/primary"

    >



    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="fill_parent"
                android:layout_height="220dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/slika2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/oval_btn"
                    android:padding="8dp"
                    android:src="@drawable/heart"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="7dp"
                app:layout_constraintBottom_toBottomOf="@id/imageView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView

                    android:id="@+id/movieTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Kruska Pab"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/constraint_layout"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/moviestar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableStart="@drawable/star"
                    android:drawablePadding="5dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/movieTitle"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="20sp"
                    android:text="Kosovska 9"
                    android:id="@+id/adresa"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3">

                <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/constraint_Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/wifi"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:background="@drawable/oval_btn"
                        android:padding="8dp"
                        android:src="@drawable/wifi"
                        app:layout_constraintEnd_toStartOf="@+id/reviews"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/wifi_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Free WiFi"
                        app:layout_constraintEnd_toEndOf="@+id/wifi"
                        app:layout_constraintStart_toStartOf="@+id/wifi"
                        app:layout_constraintTop_toBottomOf="@+id/wifi" />

                    <ImageView
                        android:id="@+id/reviews"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:background="@drawable/oval_btn"
                        android:padding="10dp"
                        android:src="@drawable/reviews"
                        app:layout_constraintEnd_toStartOf="@+id/photos"
                        app:layout_constraintStart_toEndOf="@+id/wifi"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/reviews_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Utisci"
                        app:layout_constraintEnd_toEndOf="@+id/reviews"
                        app:layout_constraintStart_toStartOf="@+id/reviews"
                        app:layout_constraintTop_toBottomOf="@+id/reviews" />

                    <ImageView
                        android:id="@+id/photos"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:background="@drawable/oval_btn"
                        android:padding="8dp"
                        android:src="@drawable/photo_heart"
                        app:layout_constraintEnd_toStartOf="@+id/food"
                        app:layout_constraintStart_toEndOf="@+id/reviews"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/photos_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Fotografije"
                        app:layout_constraintEnd_toEndOf="@+id/photos"
                        app:layout_constraintStart_toStartOf="@+id/photos"
                        app:layout_constraintTop_toBottomOf="@+id/photos" />

                    <ImageView
                        android:id="@+id/food"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:background="@drawable/oval_btn"
                        android:padding="6dp"
                        android:src="@drawable/food_dish_svgrepo_com"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/photos"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/food_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Kuhinja"
                        app:layout_constraintEnd_toEndOf="@+id/food"
                        app:layout_constraintStart_toStartOf="@+id/food"
                        app:layout_constraintTop_toBottomOf="@+id/food" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </RelativeLayout>


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="Kontakt telefon"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />
            <TextView
                android:text="+381677054504"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:id="@+id/mobilni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/textView"
                app:layout_constraintTop_toBottomOf="@id/relativeLayout"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="10dp"
                />


            <TextView
                android:textSize="20dp"
                android:maxLines="6"
                android:enabled="false"
                android:id="@+id/movieSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean in blandit nunc. Duis tristique, ipsum nec blandit pellentesque, mauris eros consectetur nisi, id pretium nisi sapien ac."
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Radno vreme:"

                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/textView"
                app:layout_constraintTop_toBottomOf="@+id/movieSummary" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/radnovreme"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintStart_toStartOf="@id/textView"
                app:layout_constraintTop_toBottomOf="@id/textView3">



                <TextView

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/subota"
                    android:id="@+id/ponpet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ponedeljak-Petak"
                    android:textColor="@color/white"
                    android:textSize="16dp"

                    />

                <TextView
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toBottomOf="@id/ponpet"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/ned"
                    android:id="@+id/subota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ponpet"
                    android:layout_marginTop="8dp"
                    android:text="Subota"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toBottomOf="@id/subota"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/ned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Nedelja"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <EditText
                    android:padding="1.5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/subvreme"
                    android:enabled="false"
                    android:layout_marginTop="2dp"
                    android:id="@+id/ponpetvreme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="08:00-00:00"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <EditText
                    android:padding="1.5dp"
                    app:layout_constraintTop_toBottomOf="@id/ponpetvreme"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/nedvreme"
                    android:enabled="false"
                    android:id="@+id/subvreme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ponpetvreme"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:text="09:00-01:00"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <EditText

                    app:layout_constraintTop_toBottomOf="@id/subvreme"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:enabled="false"
                    android:id="@+id/nedvreme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_below="@id/subvreme"
                    android:layout_alignParentEnd="true"
                    android:text="09:00-00:00"
                    android:padding="1.5dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"
                    android:textSize="16dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
    <RelativeLayout
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"

        app:layout_constraintBottom_toBottomOf="parent"
         >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pogledaj_dogadjaje"
            android:text="Pogledaj dogadjaje"
            app:backgroundTint="@color/background2"
            android:textSize="22dp"
            android:textColor="#152743"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>