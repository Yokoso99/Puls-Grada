<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".DogadjajiDetalji">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/naslov"
        android:enabled="false"
        android:layout_marginTop="10dp"
        android:text="Title"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/slika"
        android:padding="8dp"
        android:layout_gravity="center"
        android:src="@drawable/slika2"
        android:scaleType="centerCrop"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:enabled="false"
        android:inputType="text|textMultiLine"
        android:maxLines="8"
        android:text="Lorem ipsum dolor sa. Integer sodales euismdrerit quam. Pellentesque massa enim, blandit id blandit eget, euismod non risus. Nunc imperdiet malesuada maximus. Fusce consequat enim sed ex sollicitudin, vitae venenatis dui vulputate. Nulla facilisi. Integer rhoncus vehicula malesuada. Morbi cursus mi sed mi tempor, quis malesuada tellus porttitor. Proin commodo volutpat aliquet. Duis at sollicitudin turpis."
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="20dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/border_opis"
        android:id="@+id/opis"/>
    <RelativeLayout

        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editbtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20dp"
            android:text="Edit"
            android:background="@drawable/round_back_secondary2"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/delete_btn"
                android:layout_marginBottom="5dp"
                android:background="@drawable/delete_background"
                android:text="Delete"
                android:visibility="gone"
                android:textSize="20dp"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/editbtn"
                app:layout_constraintEnd_toEndOf="@id/editbtn"
                app:layout_constraintStart_toStartOf="@id/editbtn"/>
            <ImageView
                android:id="@+id/slika_add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/editbtn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@id/editbtn"
                android:src="@drawable/image_add"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/round_back_notifications"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <ImageView
                android:layout_marginRight="5dp"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/slika_delete"
                app:layout_constraintEnd_toStartOf="@id/editbtn"
                app:layout_constraintTop_toTopOf="@id/editbtn"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/round_back_night_mode"
                android:src="@drawable/image_delete"
                android:padding="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>



</LinearLayout>