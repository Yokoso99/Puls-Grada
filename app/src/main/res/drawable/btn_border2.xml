<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- Background color when button is pressed -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFCCCCCC"/> <!-- Change this to your desired pressed color -->
                </shape>
            </item>
            <!-- Inner left line for the right button -->
            <item android:right="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FF000000"/> <!-- Change this to your desired inner line color -->
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <!-- Default background color -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFFFF"/> <!-- Change this to your desired default color -->
                </shape>
            </item>
            <!-- Inner left line for the right button -->
            <item android:right="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/primary"/> <!-- Change this to your desired inner line color -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
